<%- include("partials/header.ejs")%>

<div class="formBody" style="width: 100%;
  height: 100vh;
  padding: 0;
  margin: 0;
  background-image: url(/img/hero/hero4.webp);
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;">
      <div style="min-height: 70vh;
  display: flex;">
      <form id="editProfileForm" method="POST" action="/profile/edit" style="margin:auto; width:30rem; color: black; background-color: white; border-radius: 10px;">
        <div style="background-color: #01FEAF;
  text-align: center;
  height: 4rem;
  color: black;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;">
          <br>
          <h5 class="text-center" style="font-family: 'Nunito', sans-serif;">Edit Profile</h5>
          <br>
        </div>
        <input type="hidden" name="userId" value="<%=userInfo[0].userId%>">
  
        <div id="editProfileCol" style="padding: 10px;">
          <span>First Name:</span>
          <input type="text" class="form-control" name="fName" value="<%=userInfo[0].firstName%>">
          <span>Last Name:</span>
          <input type="text" class="form-control" name="lName" value="<%=userInfo[0].LastName%>">
       
     
      
          <span>Date of Birth:</span>
          <input type="date" class="form-control" name="dob"  value="<%=userInfo[0].dobISO%>">
          <span>Email:</span>
          <input type="email" class="form-control" name="email" value="<%=userInfo[0].email%>">

      
      
          <span>Password:</span>
          <input type="password" class="form-control" name="password" value="<%=userInfo[0].password%>">
          <span>Goals:</span>
          <input type="text" class="form-control" name="goals" value="<%=userInfo[0].goals%>">
        </div>
        <br>

        <% if (typeof message != "undefined"){ %>
      <h4 class="text-center" style="color:green;"><%=message%></h4>
    <% } %>

      <br><br>

        <div class="text-center">
          <button class="btn btn-dark" style="font-family: 'Nunito', sans-serif;">Update Profile</button>
          <br><br>
        </div>
      </form>  
      </div>
</div>
      
<%- include("partials/footer.ejs")%>

